<?xml version="1.0" encoding="UTF-8" ?>
<interface>
  <object class="Window" id="root_entropy">
    <property name="x">1</property>
    <property name="y">2</property>
    <property name="height">10</property>
    <property name="width">70</property>
    <property name="border">true</property>

    <child>
      <object class="Label">
        <property name="x">1</property>
        <property name="y">1</property>
        <property name="height">1</property>
        <property name="width">40</property>
        <property name="text">Entropy Needed</property>
      </object>
    </child>

    <child>
      <object class="HLine">
        <property name="x">1</property>
        <property name="y">2</property>
        <property name="width">67</property>
      </object>
    </child>

    <child>
      <object class="Label">
        <property name="x">1</property>
        <property name="y">3</property>
        <property name="height">3</property>
        <property name="width">60</property>
        <property name="text">Please type random characters into the textbox below to introduce entropy into the system.  It could take several minutes.</property>
      </object>
    </child>

    <child>
      <object class="TextBox" id="txt_random">
        <property name="x">1</property>
        <property name="y">7</property>
        <property name="height">1</property>
        <property name="width">60</property>
        <property name="z_index">100</property>
        <signal name="changed" handler="on_txt_random_changed"/>
      </object>
    </child>

  </object>
</interface>
